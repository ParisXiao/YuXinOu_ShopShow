<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/login_bg"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent"
        android:src="@mipmap/bg"
        android:scaleType="centerCrop"
        android:layout_height="@dimen/y450" />
    <TextView
        android:id="@+id/appname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="渝新欧商城"
        android:textColor="@color/white"
        android:textSize="36sp"
        android:layout_marginTop="@dimen/y120"
        android:layout_centerHorizontal="true"
        />
    <RelativeLayout
        android:id="@+id/centrol_part"
        android:layout_width="@dimen/x640"
        android:background="@drawable/shape_bg"
        android:layout_height="@dimen/y800"
        android:layout_marginTop="@dimen/y320"
        android:layout_centerHorizontal="true">
        <TextView
            android:id="@+id/register_titile"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/y70"
            android:layout_marginLeft="@dimen/x80"
            android:text="重置密码"
            android:textColor="@color/login_text"
            android:textSize="@dimen/x36"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="match_parent"
            android:layout_alignRight="@+id/register_titile"
            android:layout_alignEnd="@+id/register_titile"
            android:layout_below="@+id/register_titile"
            android:layout_marginTop="@dimen/x20"
            android:background="@color/login_text"
            android:layout_height="@dimen/y6"
            android:layout_alignLeft="@+id/register_titile"
            android:layout_alignStart="@+id/register_titile" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/y192"
            android:layout_height="@dimen/y62">
            <ImageView
                android:layout_width="@dimen/x40"
                android:src="@mipmap/shouji"
                android:layout_marginLeft="@dimen/x40"
                android:layout_height="match_parent" />
            <EditText
                android:id="@+id/reset_phone"
                android:layout_width="match_parent"
                android:background="@null"
                android:textColorHint="#d1d1d1"
                android:textSize="@dimen/x28"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x110"
                android:layout_marginRight="@dimen/x160"
                android:hint="请输入手机号"
                android:layout_height="match_parent" />
            <View
                android:layout_width="@dimen/x2"
                android:layout_centerVertical="true"
                android:background="#d1d1d1"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/x158"
                android:layout_height="@dimen/y26"/>
            <TextView
                android:layout_width="@dimen/x94"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/x64"
                android:textSize="@dimen/x26"
                android:textColor="#333333"
                android:text="+86"
                android:layout_height="match_parent" />
            <ImageView
                android:layout_width="@dimen/x24"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/x40"
                android:layout_centerVertical="true"
                android:src="@mipmap/xiala"
                android:layout_height="wrap_content" />
            <View
                android:layout_width="match_parent"
                android:background="#d1d1d1"
                android:layout_marginLeft="@dimen/x110"
                android:layout_marginRight="@dimen/x40"
                android:layout_alignParentBottom="true"
                android:layout_height="@dimen/y1"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/y300"
            android:layout_height="@dimen/y62">
            <ImageView
                android:layout_width="@dimen/x40"
                android:src="@mipmap/yanzhengma"
                android:layout_marginLeft="@dimen/x40"
                android:layout_height="match_parent" />
            <EditText
                android:id="@+id/reset_code"
                android:layout_width="match_parent"
                android:background="@null"
                android:textColorHint="#d1d1d1"
                android:textSize="@dimen/x28"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x110"
                android:layout_marginRight="@dimen/x160"
                android:hint="请输入验证码"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/reset_send_code"
                android:layout_width="@dimen/x120"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/x40"
                android:textSize="@dimen/x22"
                android:textColor="@color/login_text"
                android:singleLine="true"
                android:text="发送验证码"
                android:layout_height="match_parent" />
            <View
                android:layout_width="match_parent"
                android:background="#d1d1d1"
                android:layout_marginLeft="@dimen/x110"
                android:layout_marginRight="@dimen/x40"
                android:layout_alignParentBottom="true"
                android:layout_height="@dimen/y1"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/y402"
            android:layout_height="@dimen/y62">
            <ImageView
                android:layout_width="@dimen/x40"
                android:src="@mipmap/mima"
                android:layout_marginLeft="@dimen/x40"
                android:layout_height="match_parent" />
            <EditText
                android:id="@+id/reset_pwd"
                android:layout_width="match_parent"
                android:background="@null"
                android:textColorHint="#d1d1d1"
                android:textSize="@dimen/x28"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x110"
                android:inputType="textPassword"
                android:layout_marginRight="@dimen/x40"
                android:hint="请输入密码"
                android:layout_height="match_parent" />


            <View
                android:layout_width="match_parent"
                android:background="#d1d1d1"
                android:layout_marginLeft="@dimen/x110"
                android:layout_marginRight="@dimen/x40"
                android:layout_alignParentBottom="true"
                android:layout_height="@dimen/y1"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/y506"
            android:layout_height="@dimen/y62">
            <ImageView
                android:layout_width="@dimen/x40"
                android:src="@mipmap/mima"
                android:layout_marginLeft="@dimen/x40"
                android:layout_height="match_parent" />
            <EditText
                android:id="@+id/reset_pwd_again"
                android:layout_width="match_parent"
                android:background="@null"
                android:textColorHint="#d1d1d1"
                android:textSize="@dimen/x28"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x110"
                android:layout_marginRight="@dimen/x40"
                android:hint="请再次输入密码"
                android:inputType="textPassword"
                android:layout_height="match_parent" />


            <View
                android:layout_width="match_parent"
                android:background="#d1d1d1"
                android:layout_marginLeft="@dimen/x110"
                android:layout_marginRight="@dimen/x40"
                android:layout_alignParentBottom="true"
                android:layout_height="@dimen/y1"/>
        </RelativeLayout>
        <Button
            android:id="@+id/reset"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/x40"
            android:layout_marginRight="@dimen/x40"
            android:textColor="#ffffff"
            android:layout_marginTop="@dimen/y640"
            android:gravity="center"
            android:textSize="@dimen/x36"
            android:text="重置密码"
            android:background="@drawable/button"
            android:layout_height="@dimen/y98" />
    </RelativeLayout>
</RelativeLayout>