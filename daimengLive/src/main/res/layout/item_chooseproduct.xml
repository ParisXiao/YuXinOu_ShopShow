<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<RelativeLayout
    android:layout_width="0dp"
    android:layout_height="@dimen/y200"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:background="#ffffff"
    android:layout_marginTop="@dimen/y20"
    >
    <ImageView
        android:id="@+id/product_choose"
        android:layout_width="@dimen/x46"
        android:layout_height="@dimen/y46"
        android:src="@drawable/merchants_xuanzhong"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/x24"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_toRightOf="@+id/product_choose"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/x20"
        >
        <ImageView
            android:id="@+id/product_icon"
            android:layout_width="@dimen/x150"
            android:layout_height="@dimen/y150"
            android:src="@mipmap/ic_launcher"
            android:scaleType="fitXY"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:ellipsize="end"
                android:id="@+id/product_name"
                android:textColor="@color/text_color"
                android:text="重庆吃货馆"
                android:textSize="18sp"
                android:layout_marginTop="@dimen/y20"
                android:layout_marginLeft="@dimen/x20"
                />
           
            <LinearLayout
                android:id="@+id/jianshu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_below="@+id/product_name"
                android:layout_alignStart="@+id/product_name"
                android:layout_marginTop="@dimen/y10"

                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/product_kc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="库存：20"
                    android:singleLine="true"
                    />
                <TextView
                    android:id="@+id/product_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:singleLine="true"
                    android:layout_marginLeft="@dimen/x20"
                    android:text="销量：20"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/y20"
                android:layout_marginLeft="@dimen/x20"
                android:orientation="horizontal"
                >
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="￥"
                   android:textSize="16sp"
                   android:textColor="#f06f32"
                   />
                <TextView
                    android:id="@+id/product_coin"
                    android:layout_width="wrap_content"
                    android:text="32.00"
                    android:textSize="20sp"
                    android:textColor="#f06f32"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </RelativeLayout>
        
    </LinearLayout>
</RelativeLayout>
</android.support.constraint.ConstraintLayout>