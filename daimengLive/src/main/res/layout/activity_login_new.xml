<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/login_bg"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y450">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/bg"
            android:scaleType="centerCrop"
            />
        <TextView
            android:id="@+id/appname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="渝新欧商城"
            android:textColor="@color/white"
            android:textSize="36sp"
            android:layout_marginTop="@dimen/y120"
            android:layout_centerHorizontal="true"
            />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/centrol_part"
        android:layout_width="@dimen/x640"
        android:layout_height="@dimen/y640"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/shape_bg"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <TextView
            android:id="@+id/login_titile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x80"
            android:layout_marginTop="@dimen/y70"
            android:text="@string/user_login"
            android:textColor="@color/login_text"
            android:textSize="@dimen/x36" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/y6"
            android:layout_alignEnd="@+id/login_titile"
            android:layout_alignLeft="@+id/login_titile"
            android:layout_alignRight="@+id/login_titile"
            android:layout_alignStart="@+id/login_titile"
            android:layout_below="@+id/login_titile"
            android:layout_marginTop="@dimen/x20"
            android:background="@color/login_text" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y62"
            android:layout_marginTop="@dimen/y192">

            <ImageView
                android:layout_width="@dimen/x40"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x40"
                android:src="@mipmap/shouji" />

            <EditText
                android:id="@+id/edit_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x110"
                android:layout_marginRight="@dimen/x160"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="请输入手机号"
                android:textColor="@color/black"
                android:textColorHint="#d1d1d1"
                android:singleLine="true"
                android:imeOptions="actionNext"
                android:textSize="@dimen/x28" />

            <View
                android:layout_width="@dimen/x2"
                android:layout_height="@dimen/y26"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/x158"
                android:background="#d1d1d1" />

            <TextView
                android:layout_width="@dimen/x94"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/x64"
                android:gravity="center"
                android:text="+86"
                android:textColor="#333333"
                android:textSize="@dimen/x26" />

            <!--<ImageView-->
                <!--android:layout_width="@dimen/x24"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_alignParentRight="true"-->
                <!--android:layout_centerVertical="true"-->
                <!--android:layout_marginRight="@dimen/x40"-->
                <!--android:src="@mipmap/xiala" />-->

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/y1"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/x110"
                android:layout_marginRight="@dimen/x40"
                android:background="#d1d1d1" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y62"
            android:layout_marginTop="@dimen/y300">

            <ImageView
                android:layout_width="@dimen/x40"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x40"
                android:src="@mipmap/mima" />

            <EditText
                android:id="@+id/edit_pwd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x110"
                android:layout_marginRight="@dimen/x40"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:singleLine="true"
                android:imeOptions="actionDone"
                android:textColor="@color/black"
                android:textColorHint="#d1d1d1"
                android:textSize="@dimen/x28" />


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/y1"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/x110"
                android:layout_marginRight="@dimen/x40"
                android:background="#d1d1d1" />
        </RelativeLayout>

        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y98"
            android:layout_marginLeft="@dimen/x40"
            android:layout_marginRight="@dimen/x40"
            android:layout_marginTop="@dimen/y412"
            android:background="@drawable/button"
            android:gravity="center"
            android:text="登录"
            android:textColor="#ffffff"
            android:textSize="@dimen/x36" />

        <TextView
            android:id="@+id/register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x80"
            android:layout_marginTop="@dimen/y540"
            android:text="立即注册"
            android:textColor="#ef6523"
            android:textSize="@dimen/x26" />

        <TextView
            android:id="@+id/back_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x80"
            android:layout_marginTop="@dimen/y540"
            android:text="找回密码？"
            android:textColor="#595959"
            android:textSize="@dimen/x26" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/centrol_part"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/oter_login_part"
            android:layout_width="@dimen/x521"
            android:layout_marginTop="@dimen/y70"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/other_login"
                android:layout_width="wrap_content"
                android:text="使用其他方式登录"
                android:textColor="#999999"
                android:textSize="@dimen/x28"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />
            <View
                android:background="#999999"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/other_login"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"/>
            <View
                android:background="#999999"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/other_login"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"/>
        </RelativeLayout>
        <ImageView
            android:id="@+id/qq_login"
            android:layout_below="@+id/oter_login_part"
            android:layout_marginTop="@dimen/y40"
            android:layout_width="@dimen/x70"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/login_qq"
            android:layout_height="@dimen/y70" />
        <ImageView
            android:id="@+id/weibo_login"
            android:layout_below="@+id/oter_login_part"
            android:layout_marginTop="@dimen/y40"
            android:layout_width="@dimen/x70"
            android:layout_toRightOf="@+id/qq_login"
            android:layout_marginLeft="@dimen/x60"
            android:src="@mipmap/login_weibo"
            android:layout_height="@dimen/y70" />
        <ImageView
            android:id="@+id/weixin_login"
            android:layout_below="@+id/oter_login_part"
            android:layout_marginTop="@dimen/y40"
            android:layout_width="@dimen/x70"
            android:layout_toLeftOf="@+id/qq_login"
            android:layout_marginRight="@dimen/x60"
            android:src="@mipmap/login_weixin"
            android:layout_height="@dimen/y70" />
    </RelativeLayout>
</RelativeLayout>